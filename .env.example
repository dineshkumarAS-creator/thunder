# ============================================
# TRADEFLOW AI BACKEND CONFIGURATION
# Copy this file to .env and update with your values
# ============================================

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Connection
# Get from: https://supabase.com/dashboard/project/_/settings/database
DATABASE_URL=postgresql://postgres.[project-id]:[password]@aws-0-ap-south-1.pooler.supabase.com:6543/postgres

# JWT Authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Google Gemini AI
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Redis (Optional - for background tasks)
REDIS_URL=redis://localhost:6379/0

# Storage
STORAGE_BUCKET=shipments
STORAGE_REGION=ap-south-1

# Application
APP_NAME=TradeFlow AI
DEBUG=True
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@tradeflow.ai

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/tradeflow.log

# Security
ENCRYPTION_KEY=your-32-byte-encryption-key
RATE_LIMIT_PER_MINUTE=100

# Feature Flags
ENABLE_AI_EXTRACTION=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
